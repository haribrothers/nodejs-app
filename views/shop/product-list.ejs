<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <div class="card__image">
                            <img src="<%=product.imageUrl %>">
                        </div>
                        <header class="card__header">
                            <h1 class="product__title"><%=product.title %></h1>
                        </header>
                        <div class="card__content">
                            <h2 class="product__price">$<%=product.price %></h2>
                            <p class="product__description"><%=product.description.length > 60 ? product.description.substr(0,60) + '...' : product.description %></p>
                        </div>
                        <div class="card__actions">
                            <form action="/add-to-cart" method="POST">
                                <a href="/products/<%= product.id %>" class="btn btn-primary">More Details</a>
                                <button class="btn btn-accent">Add to Cart</button>
                            </form>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Product Found</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>