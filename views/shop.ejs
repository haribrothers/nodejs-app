<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('includes/navigation.ejs') %>
    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%=product.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="https://source.unsplash.com/random/800x600/?book">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$29.99</h2>
                            <p class="product__description">A great book to read on. It has some intresting facts that will help
                                you in your life</p>
                        </div>
                        <div class="card__actions">
                            <button class="btn btn-accent">Add to Cart</button>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Product Found</h1>
        <% } %>
    </main>
<%- include('includes/end.ejs') %>