extends layouts/main-layout.pug
block styles
    link(rel="stylesheet", href="/css/product.css")
block content
    main
        .grid
            if prods.length > 0
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src='https://source.unsplash.com/random/800x600/?book')
                        .card__content
                            h2.product__price $29.99
                            p.product__description
                            | A great book to read on. It has some intresting facts that will help you in your life
                        .card__actions
                            a.btn.btn-accent Add to Cart
            else
                h1 No Products